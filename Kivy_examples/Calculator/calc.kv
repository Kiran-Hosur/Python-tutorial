<Button>:
    font_size: 30
    color: 0.5,1,0.2,1
    pos: root.width/4,root.height/4
    size: 100,100

<cal_1>:
    bt1:btn1
    bt2:btn2
    bt3:btn3
    bt4:btn4
    bt5:btn5
    bt6:btn6
    bt7:btn7
    bt8:btn8
    bt9:btn9
    bt10:btn10
    bt11:btn11
    bt9:btn12
    res:screen
    id:btn
    offset_x: root.width/4
	offset_y: root.height/4
    Button:
        id:btn1
        text: "+/-"
        
        pos: btn.offset_x+0,btn.offset_y+0
        on_press: btn.selected(btn1)
    Button:
        id:btn2
        text: "0"
        
        pos: btn.offset_x+100,btn.offset_y+0
        on_press: btn.selected(btn2)
    Button:
        id:btn3
        text: "."
        
        pos: btn.offset_x+200,btn.offset_y+0
        on_press: btn.selected(btn3)
    Button:
        id:btn4
        text: "1"
        
        pos: btn.offset_x+0,btn.offset_y+100
        on_press: btn.selected(btn4)
    Button:
        id:btn5
        text: "2"
        
        pos: btn.offset_x+100,btn.offset_y+100
        on_press: btn.selected(btn5)
    Button:
        id:btn6
        text: "3"
        
        pos: btn.offset_x+200,btn.offset_y+100
        on_press: btn.selected(btn6)
    Button:
        id:btn7
        text: "4"
        
        pos: btn.offset_x+0,btn.offset_y+200
        on_press: btn.selected(btn7)
    Button:
        id:btn8
        text: "5"
        
        pos: btn.offset_x+100,btn.offset_y+200
        on_press: btn.selected(btn8)
    Button:
        id:btn9
        text: "6"
        
        pos: btn.offset_x+200,btn.offset_y+200
        on_press: btn.selected(btn9)
    Button:
        id:btn10
        text: "7"
        
        pos: btn.offset_x+0,btn.offset_y+300
        on_press: btn.selected(btn10)
    Button:
        id:btn11
        text: "8"
        
        pos: btn.offset_x+100,btn.offset_y+300
        on_press: btn.selected(btn11)
    Button:
        id:btn12
        text: "9"
        
        pos: btn.offset_x+200,btn.offset_y+300
        on_press: btn.selected(btn12)
    Button:
        id:pls
        text: "+"
        
        pos: btn.offset_x+300,btn.offset_y+0
        on_press: btn.add(pls)
        font_size: 50
    Button:
        id:mns
        text: "-"
        
        pos: btn.offset_x+300,btn.offset_y+100
        on_press: btn.add(mns)
        font_size: 50
    Button:
        id:clc1
        text: "CLC"
        
        pos: btn.offset_x+300,btn.offset_y+200
        on_press: btn.cls_screen()
        font_size: 30
    Button:
        id:eq1
        text: "="
        
        pos: btn.offset_x+300,btn.offset_y+300
        on_press: btn.equal()
    Label:
        id:screen
        text: ""
        font_size: 30
        size: 200,200
        pos: btn.offset_x+100,btn.offset_y+350
        # canvas:
        #     # color: 1,0,0
        #     Rectangle:
        #         pos: screen.pos
        #         size: screen.size